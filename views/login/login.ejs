<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%- include('../link') %>
    <title>Login</title>
</head>
<body>
    <div class="container mt-5 border border-2 border-dark md bg-light p-5">
        <h1 class="fs-1 text-center text-uppercase">Login</h1>
        <hr>
        <form action="/requestLogin" method="POST">
            <div class="my-3">
                <label for="user_email" class="form-label fs-3">Email</label>
                <input type="text" name="user_email" placeholder="Email" class="form-control fs-5">
            </div>
            <div class="my-3">
                <label for="user_password" class="form-label fs-3">Password</label>
                <input type="password" name="user_password" placeholder="Password" class="form-control fs-5">
            </div>
            <% if(typeof(errors)!=="undefined"){
                    errors.forEach(err => { %>
                        <div class="alert alert-danger" role="alert"><%= err %></div>
            <%      })
                } %>
            <button class="btn btn-primary my-3">Login</button>
        </form>
        <a class="fs-5" href="/register">Don't have an account yet?</a>
        <hr>
    </div>
</body>
</html>